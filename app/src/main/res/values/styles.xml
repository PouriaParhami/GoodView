<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>


        <!-- theme for the preference -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>


    <!-- Error Text Box Style -->
    <style name="ErrorTextBoxStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/dw_yekan</item>
        <item name="android:textSize">13sp</item>

    </style>

    <!-- Title Post Style -->
    <style name="TitleTextBoxStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/dw_yekan</item>
        <item name="android:textSize">17sp</item>

        <item name="android:padding">5dp</item>

    </style>

    <!-- Title Post Style main activity -->
    <style name="TitlePostMain" parent="TitleTextBoxStyle">

        <item name="android:layout_width">wrap_content</item>

    </style>

    <!-- Description Post Style -->
    <style name="DescriptionTextBoxStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/dw_yekan</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">5dp</item>

        <item name="android:padding">10dp</item>

    </style>

    <!-- Content Post Style -->
    <style name="ContentTextBoxStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/dw_yekan</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">10dp</item>

        <item name="android:padding">10dp</item>

    </style>


</resources>

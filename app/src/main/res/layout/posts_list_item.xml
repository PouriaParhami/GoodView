<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tv_post_title"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dw_yekan"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:text="Post title" />

    <ImageView
        android:id="@+id/iv_post_pic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_post_title"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/post_pic_description"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_post_title" />

    <TextView
        android:id="@+id/tv_post_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_post_title"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:justificationMode="inter_word"
        android:fontFamily="@font/dw_yekan"
        android:layout_toStartOf="@+id/tv_post_title"
        card_view:layout_constraintEnd_toStartOf="@+id/iv_post_pic"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_post_title"
        tools:text="Post Description" />

    <ImageView
        android:id="@+id/iv_fav_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/iv_post_pic"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:padding="2dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/iv_post_pic"
        card_view:srcCompat="@drawable/ic_favorite_border_48px" />

    <TextView
        android:id="@+id/tv_like_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dw_yekan"
        android:textSize="11sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@+id/iv_fav_icon"
        card_view:layout_constraintTop_toBottomOf="@+id/iv_post_pic"
        tools:text="علاقه مندی" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#DDDDDD"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/iv_fav_icon" />


</android.support.constraint.ConstraintLayout>



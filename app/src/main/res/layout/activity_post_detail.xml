<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="10dp"
    tools:context="com.redfirelab.android.wpmobileapp.PostDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_post"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:contentDescription="@string/image_of_post_in_post_activity"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_post_act_title"
            style="@style/TitleTextBoxStyle"
            android:layout_gravity="center"
            tools:text="Wow shomething happned" />

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/html_text"
            tools:text="hello"
            style="@style/ContentTextBoxStyle"/>

    </LinearLayout>

</ScrollView>


